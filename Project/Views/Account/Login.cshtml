@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model LoginVm
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="post">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="AsInstructor"  />
                        <label class="form-check-label" for="form1Example3">  Login As Instructor </label>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input  asp-for="Email" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Email address</label>
                        <span asp-validation-for="Email" class="text-bg-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example23">Password</label>
                        <span asp-validation-for="Password" class="text-bg-danger"></span>
                    </div>
                    <div class="text-bg-danger" asp-validation-summary="ModelOnly">   </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Remmber" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <a asp-controller="account" asp-action="register" class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998">
                       Registeration
                    </a>
                  

                </form>
            </div>
        </div>
    </div>
</section>