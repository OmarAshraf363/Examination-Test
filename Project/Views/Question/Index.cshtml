@{
    Layout = "/Views/Shared/_ExamLayout.cshtml";
}

@model List<Question>
@{
    ViewData["Title"] = "Index";
    int index = 1;
}

<h1>Index</h1>
<a href="/Question/add" class="btn btn-info">ADD</a>

@foreach (var q in Model)

{
    <div class="accordion" id="accordionExample">
        <div class="accordion-item alert-danger">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    [@(index++)]  @q.Body
                </button>
            </h2>  
            <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>The corrict answer is :</strong> @q.Answer <code></code>
                </div>
            </div>
            <div class="btn-group">
                <a href="/Question/edit/@q.ID" class="btn btn-info">Edit</a>
                <a href="/Question/delete/@q.ID" class="btn btn-info">delete</a>
                <a href="/Question/details/@q.ID" class="btn btn-info">Details</a>
            </div>

        </div>
    </div>
}